[user]
	name = Yusuke Hatanaka
	email = arbalestimp@gmail.com
[core]
	excludesfile = /Users/hatajoe/.gitignore
	quotepath = false
	preloadindex = true
    editor = vim -u NONE --noplugin
[pager]
    log = diff-highlight | less
    show = diff-highlight | less
    diff = diff-highlight | less
[diff]
    patience = true
    histogram = true
[alias]
	cm = commit
	co = checkout
	ac = !git add -A && git commit
    st = status -sb
    rb = rebase
    pu = !git push origin `git rev-parse --abbrev-ref HEAD`
	ctags = !.git/hooks/ctags
[help]
	autocorrect = 1
[color]
	ui = 1
[init]
	templatedir = ~/.git_template
[ghq]
	root = /Users/hatajoe/src
